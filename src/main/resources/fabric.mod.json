{
	"schemaVersion": 1,
	"id": "prospectingtool",
	"version": "${version}",
	"name": "Prospecting Tools",
	"description": "This mod adds prospecting tools that assist you in finding ores, types of stone, moss, and more!",
	"authors": [
		"Inno!"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "MIT",
	"icon": "assets/prospectingtool/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"net.inno.prospectingtool.ProspectingTool"
		],
		"client": [
			"net.inno.prospectingtool.ProspectingToolClient"
		],
		"fabric-datagen": [
			"net.inno.prospectingtool.ProspectingToolDataGenerator"
		]
	},
	"mixins": [
		"prospectingtool.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.14.23",
		"minecraft": "~1.20.1",
		"java": ">=17",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}